<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/master/src/Core/System/SystemConfig/Schema/config.xsd">
    <card>
        <title>ESD Configuration</title>
        <title lang="de-DE">ESD Konfiguration</title>

        <input-field type="bool">
            <name>isSendDownloadConfirmation</name>
            <label>Sending download confirmation email</label>
            <label lang="de-DE">Download Bestätigungs Email senden</label>
        </input-field>

        <input-field type="bool">
            <name>isSendSerialConfirmation</name>
            <label>Sending serial number confirmation email</label>
            <label lang="de-DE">Seriennummer Bestätigungs Email senden</label>
        </input-field>

        <input-field type="bool">
            <name>isNotDownloadLimitation</name>
            <label>No download limitation</label>
            <label lang="de-DE">Kein Download Limit</label>
            <defaultValue>true</defaultValue>
        </input-field>

        <input-field type="int">
            <name>limitDownloadNumber</name>
            <label>Enter the global number of the maximal amount of downloads.</label>
            <label lang="de-DE">Gebe die Anzahl der maximalen globalen Downloads ein.</label>
            <defaultValue>0</defaultValue>
        </input-field>

        <input-field type="bool">
            <name>isShowESDWithdrawal</name>
            <label>Show ESD withdrawal within checkout</label>
            <label lang="de-DE">ESD Widerrufsrecht an der Kasse anzeigen</label>
            <defaultValue>false</defaultValue>
        </input-field>

        <input-field type="bool">
            <name>isShowInstantESDDownload</name>
            <label>Show instant download available</label>
            <label lang="de-DE">Sofortigen Download anzeigen verfügbar</label>
            <defaultValue>false</defaultValue>
        </input-field>
    </card>
</config>
