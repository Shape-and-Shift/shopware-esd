{% sw_extends '@Storefront/storefront/page/product-detail/buy-widget.html.twig' %}

{% block page_product_detail_delivery_informations %}
    {% set esd = searchEsdByProductIds([page.product.id], context.context) %}

    {% if shopware.config.SasEsd.config.isShowInstantESDDownload == true %}
        {% if esd.count > 0 %}
            <div class="product-detail-delivery-information">
                <p class="delivery-information">
                    <span class="delivery-status-indicator bg-success"></span>
                    {{ "sasEsd.detail.instantDownloadAvailable"|trans()|sw_sanitize }}
                </p>
            </div>
        {% else %}
            {{ parent() }}
        {% endif %}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}
